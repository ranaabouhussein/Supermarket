<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SellerActivity">
    <LinearLayout
        android:background="@color/khaki"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:weightSum="16"
        android:orientation="horizontal"
        android:id="@+id/panel">


        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="11"
            android:gravity="center"
            android:text="Seller"
            android:textSize="30sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/editFrame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <Button
                android:id="@+id/editButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_add_circle_24"
                android:backgroundTint="@color/black"
                android:clickable="true" />


        </FrameLayout>
        <FrameLayout
            android:id="@+id/editLocFrame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/locButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_add_location_24"
                android:backgroundTint="@color/black"
                android:clickable="true" />


        </FrameLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:backgroundTint="@color/MistyRose"
        android:background="@color/MistyRose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"/>


</LinearLayout>